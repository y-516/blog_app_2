<div class="container-fluid">
  <div class="index">
    <h1>ブログ一覧画面</h1>
    <h2><%= notice%></h2>
      <% @blog.each do |blog| %>
        <div class="row">
          <p class ="col-xs-12 col-md-6"><%=blog.content%></p>
          <div  class="col-xs-12 col-md-6">
            <p class="btn btn-success"><%= link_to "編集する",edit_blog_path(blog.id) %></p>
            <p class="btn btn-warning"><%= link_to "削除する",blog_path(blog.id),method: :delete%></p>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
