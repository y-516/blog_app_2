.users_show_all{
  height: 100%;
  background-image:url(<%= asset_path 'happy-man.jpg' %>);
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size:100% auto;

}

.users_show_content{
  text-align:center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size:100% auto;
  background-image:url(<%= asset_path 'happy-man.jpg' %>);
}
.users_show_content img{
  height:300px;
  width: 300px;
  margin-bottom: 20px;
}
.users_show_content h2{
  margin-top: 0;
}
.users_show_content P{
  font-size:5rem;
  margin-bottom: 0;
}
